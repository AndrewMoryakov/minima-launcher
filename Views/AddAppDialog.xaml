<Window x:Class="MinimalistDesktop.Views.AddAppDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить приложение"
        Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Название приложения:" 
                       Foreground="White" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" 
                     Padding="8"
                     FontSize="14"
                     Background="#2D2D30"
                     Foreground="White"
                     BorderBrush="#3F3F46"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- Путь -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Путь к файлу:" 
                       Foreground="White" 
                       Margin="0,0,0,5"/>
            <DockPanel>
                <Button x:Name="BrowseButton" 
                        Content="..." 
                        Width="40" 
                        DockPanel.Dock="Right"
                        Margin="5,0,0,0"
                        Click="BrowseButton_Click"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="8"/>
                <TextBox x:Name="PathTextBox" 
                         Padding="8"
                         FontSize="14"
                         Background="#2D2D30"
                         Foreground="White"
                         BorderBrush="#3F3F46"
                         BorderThickness="1"/>
            </DockPanel>
        </StackPanel>

        <!-- Аргументы -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Аргументы (опционально):" 
                       Foreground="White" 
                       Margin="0,0,0,5"/>
            <TextBox x:Name="ArgumentsTextBox" 
                     Padding="8"
                     FontSize="14"
                     Background="#2D2D30"
                     Foreground="White"
                     BorderBrush="#3F3F46"
                     BorderThickness="1"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"
                    Background="#3F3F46"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Добавить" 
                    Width="100" 
                    Height="35"
                    Click="OkButton_Click"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
